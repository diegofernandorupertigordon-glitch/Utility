<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticketContainer"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERFUMERÍA"
            android:textAlignment="center"
            android:textColor="#00E5FF"
            android:textSize="14sp"
            android:letterSpacing="0.3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTEGRAL"
            android:textAlignment="center"
            android:textColor="#1A1F26"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="15dp"
            android:background="#1A1F26" />

        <TextView
            android:id="@+id/txtInfoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIENTE: ...\nFECHA: ..."
            android:textColor="#636E72"
            android:textSize="11sp"
            android:lineSpacingExtra="4dp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/tableProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:stretchColumns="1">

            <TableRow android:paddingVertical="8dp">
                <TextView android:text="CANT" android:textSize="10sp" android:textStyle="bold" android:textColor="#1A1F26"/>
                <TextView android:text="   DESCRIPCIÓN" android:textSize="10sp" android:textStyle="bold" android:textColor="#1A1F26"/>
                <TextView android:text="VALOR" android:textSize="10sp" android:textStyle="bold" android:gravity="end" android:textColor="#1A1F26"/>
            </TableRow>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F1F5F9" />
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#D1D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $0.00"
                android:textColor="#636E72"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtIva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IVA 15%: $0.00"
                android:textColor="#636E72"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#00E5FF"
                android:layout_gravity="end" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL: $0.00"
                android:textColor="#1A1F26"
                android:textSize="28sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Gracias por preferir Perfumería Integral\nQuito - Ecuador"
            android:textAlignment="center"
            android:textColor="#B2BEC3"
            android:textSize="10sp"
            android:textStyle="italic" />

    </LinearLayout>
</LinearLayout>